<!-- BEGIN HEAD -->
<head>
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Images/adminfav2.png" />
    @Html.Partial("_Head")
    @Html.Partial("_Css3")
    @RenderSection("styles", required: false)
    @Html.Partial("_Css2")
</head>
<body class="page-md login">
    <div class="logo">
        <a href="@Url.Action("Index", "Login")">
            <img src="~/Images/logo-default.png" alt="" />
        </a>
    </div>
    <div class="menu-toggler sidebar-toggler">
    </div>
    <div class="content">
        @RenderBody()
    </div>
    <div class="copyright">
        @if (DateTime.Now.Year <= 2018)
        {
            <span>2018</span>
        }
        else
        {
            <span>2018-@DateTime.Now.Year</span>
        }
        &copy;<a title="EPUIT" target="_blank" href="https://cntt.epu.edu.vn/">EPUIT</a>
    </div>

    @Html.Partial("_Scripts2")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        jQuery(document).ready(function () {
            Metronic.init();
            Layout.init();
            Login.init();
            Demo.init();
        });
    </script>
    @RenderSection("scripts2", required: false)
</body>

</html>