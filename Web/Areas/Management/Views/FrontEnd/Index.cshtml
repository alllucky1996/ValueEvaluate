@{
    ViewBag.Title = "CAIT Content Management";
    Layout = "~/Areas/Management/Views/Shared/_PublicLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12" id="notifDeXuatBox">
        <div class="portlet light">
            <div class="portlet-title tabbable-line">
                <div class="caption caption-md">
                    <i class="icon-globe theme-font-color hide"></i>
                    <span class="caption-subject theme-font-color bold uppercase"><i class="fa fa-bullhorn"></i> ĐĂNG KÝ EMAIL CÁN BỘ</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="scroller" data-always-visible="1" data-rail-visible1="0" data-handle-color="#D7DCE2">

                    <form role="form" action="#">
                        <div class="form-group">
                            <label class="control-label">Đơn vị</label>
                            <select class="form-control" type="text">
                                <option>
                                    Đại học Khoa học Tự nhiên
                                </option>
                                <option>
                                    Đại học Khoa học Xã hội và Nhân văn
                                </option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Đối tượng cán bộ</label>
                            <select class="form-control" type="text" placeholder="http://www.mywebsite.com">
                                <option>
                                    Cán bộ cơ hữu
                                </option>
                                <option>
                                    Cán bộ thỉnh giảng
                                </option>

                            </select>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Họ và tên</label>
                            <input class="form-control" type="text" placeholder="">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Số CMT</label>
                            <input class="form-control" type="text" placeholder="Số CMT">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Số điện thoại</label>
                            <input class="form-control" type="text" placeholder="Nhập số điện thoại">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Email mong muốn được cấp (vnu.edu.vn)</label>
                            <input class="form-control" type="text" placeholder="something@vnu.edu.vn">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Email liên lạc</label>
                            <input class="form-control" type="text" placeholder="Gmail, hotmail, yahoo,...">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Đề nghị khác (nếu có)</label>
                            <textarea class="form-control" placeholder="Nhập đề nghị nếu có" rows="3"></textarea>
                        </div>

                        <div class="margiv-top-10">
                            <a class="btn green" href="javascript:;">Ghi nhận</a>
                            <a class="btn default" href="javascript:;">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>
