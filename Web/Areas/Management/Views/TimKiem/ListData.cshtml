@using Entities.Enums;
@model IEnumerable<LdapTest.AccountInfo>
@{
    string CName = "TimKiem";
}
<table class="table  table-hover table-bordered table-striped" id="datatable_none_ajax_source">
        <tr>
            <th>STT</th>
            <th>Họ và tên</th>
            <th>Tài khoản VNU</th>
            <th>Số CMT</th>
            <th>Tình trạng</th>
        </tr>
        @if(Model != null && Model.Any())
        {
            int i = 0;
            foreach (var item in Model)
            {
                i++;
              <tr>
                  <td>@i</td>
                  <td>
                      @item.FullName
                  </td>
                  <td>
                      @item.UserName
                  </td>
                  <td>
                     @item.IdNumber
                  </td>
                  <td>
                      @(item.Password==null?"": item.Password.Contains("[lock]")?"Đã bị khóa":"Đang hoạt động")
                  </td>
                </tr>
            }
        }
</table>
